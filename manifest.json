{
  "manifest_version": 3,
  "name": "RedArchive - 小红书、抖音数据采集器",
  "version": "1.3.0",
  "description": "拦截并保存小红书、抖音搜索和用户主页数据",
  "permissions": ["storage", "downloads"],
  "host_permissions": ["*://*.xiaohongshu.com/*", "*://*.douyin.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.xiaohongshu.com/*", "*://*.douyin.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/xhsPageInjectScript.js",
        "scripts/douyinPageInjectScript.js",
        "db.js"
      ],
      "matches": ["*://*.xiaohongshu.com/*", "*://*.douyin.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
